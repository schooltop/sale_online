/*code based on Stu Nicholls "ultimate dropdown menu"
 http://www.cssplay.co.uk*/
/*common styling*/
/*menu container*/
#home_page_top .menucontainer {
    background: #fff url(/images/new_home_page/bgOFF.gif) top left repeat-x;
}

/*basic menu styling*/
#home_page_top .menu {
    float: left;
    font-family: Helvetica, arial, verdana, sans-serif;
    width: 100%;
    position: relative;
    font-size: 14px;
    font-weight: bold;
    /*background: url(/images/new_home_page/bgOFF.gif) repeat-x;*/
}

#home_page_top .menu ul {
    padding: 0;
    margin: 0;
    list-style-type: none;
    float: left;
    position: relative;
}

#home_page_top .menu ul li {
    float: right;
    position: relative;
    display: inline;
}

/*style of main items normal state*/
#home_page_top .menu ul li a, .menu ul li a:visited {

    display: block;
    text-decoration: none;
    color: #6a6a6a;
    width: auto;
    height: 23px;
    padding: 0px 25px 0px 25px;
    line-height: 33px;
    text-transform: uppercase;
	/*font-family: Times;*/
	font-size: 14px;
}


* html .menu ul li a, .menu ul li a:visited {
    width: auto;
    width:auto;}

/*hide sub nav items*/
#home_page_top .menu ul li ul {display:none;}
/*style for table of sub nav items*/
#home_page_top table {border-collapse:collapse;font-size:8px; }
/*specific to non IE browsers*/
/*main nav over state*/
#home_page_top .menu ul li:hover a {color:#8ed8f8;background: url(images/new_home_page/bg_manu_h.png) top right repeat-x;}
/*show drop-down list*/
#home_page_top .menu ul li:hover ul {display:block;position:absolute;top:22px;margin-top:1px;left:0;width:100%;border-top:1px ;}
/*drop-down on state*/
#home_page_top .menu ul li:hover ul li a {display:block;background:#8ed8f8;color:#454545;height:auto;padding:2px 16px 2px 16px;line-height:15px;border-bottom:1px ;font-size: 12px;font-weight:normal; }
/*sub drop-down over state*/
#home_page_top .menu ul li:hover ul li a:hover {background:#8ed8f8;color:#ff973d;}