@charset "utf-8";
.colselect,.colselect:link,.colselect:visited{
	display:block;
	border:1px solid #BCBCBC;
	width:450px;
	height:16px;
	overflow:hidden;
	line-height:16px;
	background:url(/images/up1.png) right no-repeat;
	text-align:left;
	cursor: pointer;
}
.colselect:active{
	border:1px solid #BCBCBC;
	width:450px;
	height:16px;
	padding:0px 0 0 0px;
	overflow:hidden;
}
.colselect span{
	width:100px;
	padding-left:3px;
	overflow:hidden;
	height:16px;
	line-height:16px;
	font-size:12px;
	color:#333;
}
.dropmenu{
	display:none;
	margin-top:-1px;
	background-color:#FFF;
	position:absolute;
	width:446px;
	height:auto;
	border:1px solid #BCBCBC;
	z-index:99;
	padding:2px 2px;
    margin-left:0px;
}
.dropmenu li{
	font-size:12px;
	line-height:25px;
	height:25px;
	padding-left:5px;
	display:block;
	width:136px;
	cursor:default;
	-moz-user-select:none;
	text-align:left;
}

.rootmenu{
	position:absolute;
	display:none;
}
.menuhover{
	background:url(/images/root2.png) right no-repeat;
	color:#56cdff;
}
.menuout{
	background:url(/images/root1.png) right no-repeat;
	color:#333;
}
.norout{
	color:#333;
}
.norhover{
	background:url(/images/root.png) right no-repeat;
	color:#56cdff;
}
