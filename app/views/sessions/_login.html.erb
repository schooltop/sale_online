<div class="login">
<div class="column main">
	<%if page?("signup")%>
		<span style="margin: 10px 0 0 10px;font-size: 20px;color: #C0B536;">
			<%=t :have_a_account%> 
		</span>
	<%end%>
<% form_tag sessions_path,:html=>{:id=>"signup_form"} do -%>
  <h2 class="subdued">
    <%= t :login_in%>
  </h2>
  <div class="fieldgroup">
    <div class="fields">
    	 <dl class="form">
	       <dt><label><%= t :email_or_login%></label></dt>
	       <%@login = params[:email] if params[:email]%>
	       <dd>
	    	<%= text_field_tag 'login', (@user ? @user.email : (@login ? @login : "")),
	    	:id=>"user_email"%>
	    	<p class="note" id="email_tip"></p>
	    	</dd>
	     </dl>

	     <dl class="form">
		    <dt><label><%= t :password%></label></dt>
		    <dd><%= password_field_tag 'password', (@user ? @user.password : ""),
		    :id=>"user_password"%>
		    	<p class="note" id="password_tip"></p>
		    </dd>
	     </dl>
    </div>
  </div>
	<%=hidden_field_tag :from,@from if @from%>
  	<span id="login_error" class="error" style="display: inline;">
  		<%=@login_error%>
  	</span>
  <div class="form-actions">
  	<div  style="margin: 0px 0 0 300px;">
  	<%= check_box_tag 'remember_me', '1',true %>  
	<%= label_tag 'remember_me', t(:remember_me) %><br />
  	<!-- <%=link_to t(:forgot_password)+"?","/forgot_password"%><br /> -->
  	<!-- <input type="submit" class="mark-button button" value="<%=t(:login)%>"> -->
  	<button type="submit" class="button" style="border:0px ">
	  	 		<img width="104" height="30" alt="" src="/images/discription/login.png" />
	</button>
  	<br /></div>
  </div>
  
<%end%>
</div>
</div>