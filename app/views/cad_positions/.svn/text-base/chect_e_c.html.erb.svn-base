
<%=render :partial=>"left"%>

<div id="content">
<%= link_to "去往学生求职管理页面" ,:controller=>"cad_employs" %>|
<%= link_to "返回企业招聘管理页面" ,:controller=>"cad_positions" %>
<% form_for(@cad_position) do |f| %>
 <table width="98%" border="0" cellpadding="0" cellspacing="0">
<tr>
             <td height="30" align="right" class="text"><font color="red">* </font><strong>公司名称：</strong></td>
             <td colspan="3" align="left" class="text">
             <%=f.text_field :title ,:style=>"width:243px;"%>	
             <span id="sp_ejob_title"></span>
          </td>
          </tr>
         <tr>
             <td height="30" align="right" class="text"><font color="red">* </font><strong>公司名称：</strong></td>
             <td colspan="3" align="left" class="text">
            选择公司： <%=f.select( :cad_enterprise_id, CadEnterprise.find(:all, :order =>'convert(company using gbk)desc').collect {|p| [ p.company, p.id ] },:include_blank => true )%>	
             <span id="sp_ejob_title"></span>
          </td>
          </tr>
                 <tr>
                  <td height="30" align="right" class="text"><font color="red">* </font><strong>企业联系人：</strong></td>
                  <td height="30" colspan="3" align="left" class="text"><span class="red2">
                     <%=f.text_field :contact,:style=>"width:100px;"%>
                     </span></td>
                </tr>
                 <tr>
                  <td height="30" align="right" class="text"><font color="red">* </font><strong>企业联系人：</strong></td>
                  <td height="30" colspan="3" align="left" class="text"><span class="red2">
             选择联系人： <%=f.select( :cad_contact_id, CadContact.find(:all, :order =>'convert(name using gbk)desc').collect {|p| [ p.name, p.id ] },:include_blank => true )%>	
                     </span></td>
                </tr>
                <%= f.submit '保存' %>	 
</table>
<%end%>
</div>
